<p id="notice" class="bg-info"><%= notice %></p>

<% if @batchs.present? %>

<h2>Listing Batch</h2>

<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr class="info control-label">
      <th>Batch Name</th>
      <th colspan="2"> Action </th>
    </tr>
  </thead>

  <tbody>
    <% @batchs.each do |batch| %>
      <tr>
        <td><%= batch.name %></td>
        <td><%= link_to 'Show', batch, :class => 'btn btn-success btn-sm btn-block' %></td>
        <!-- <td><%#= link_to 'Edit', edit_batch_path(batch) %></td> -->
        <td><%= link_to 'Destroy', batch, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-sm btn-block' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% end %>

<%= link_to 'Run Batch', new_batch_path, :class => 'btn btn-default', :role => 'button' %>
